{
  "name": "Curate New Tab + Discogs Watchlist",
  "description": "Clock, decimal age, and a Discogs watchlist for new releases.",
  "version": "7.1.0",
  "manifest_version": 3,
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Curate Watchlist"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://api.discogs.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.discogs.com/label/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "fonts/analog-whispers.ttf" ],
      "matches": [ "*://*.discogs.com/*" ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  }
}
